<div class="wrapper">
  <h1>Available games</h1>

  <table class="games-list">
    <thead>
      <tr>
        <td>Id</td>
        <td>Created at</td>
        <td>Total Score</td>
        <td>State</td>
        <td>Delete?</td>
      </tr>
    </thead>
    <tbody>
      <% @games.each do |game| %>
        <tr>
          <td><%= link_to "Game #{game.id}", game %></td>
          <td><%= time_ago_in_words(game.created_at) %></td>
          <td><%= game.total_score %></td>
          <td class="<%= game.finished ? 'finished' : 'ongoing' %>"><%= game.finished ? 'Finished' : 'Ongoing' %></td>
          <td><%= link_to 'Delete?', game, :confirm => 'Are you sure?', :method => :delete, :class => 'delete' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'Back to Title', root_url, :class => 'action back' %>
</div>
